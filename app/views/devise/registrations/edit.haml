%h2
  Edit #{resource_name.to_s.humanize}
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :first_name, label: "Jméno", required: true,  autofocus: true, input_html: { autocomplete: "first_name" } 
    = f.input :last_name, label: "Příjmení", required: true, autofocus: true, input_html: { autocomplete: "last_name" } 
    = f.input :adress, required: true, autofocus: true, input_html: { autocomplete: "adress" } 
    = f.input :avatar
    = f.input :password,                                     
      hint: "leave it blank if you don't want to change it",  required: false,   input_html: { autocomplete: "new-password" }          
    = f.input :password_confirmation,      required: false,      input_html: { autocomplete: "new-password" } 
    = f.input :current_password,      hint: "Potřebujeme Vaše heslo pro potvrzení změn",    required: true,    input_html: { autocomplete: "current-password" }               
  .form-actions
    = f.button :submit, "Update" ,class:"btn btn-outline-info"
%h3 Smazat účet
%p
  Nejse spokojeni? #{button_to "Zrušit účet", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-outline-info"}
= link_to "Back", :back, class:"btn btn-outline-info"

