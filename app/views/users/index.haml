%ul
  - @users.each do |user|
    .jumbotron.jumbotron-fluid
      .container
        - if user.avatar.attached?
          = image_tag user.avatar.variant(resize_to_limit: [300, 300])
        %h1.lead
          = user.first_name
        %h1.lead
          = user.last_name
        %h2.lead
          = user.email
        %h2.lead
          = user.adress
= page_entries_info @users
= paginate @users , window: 2

