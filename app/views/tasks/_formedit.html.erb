
<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :predmet %>
    <%= f.input :popis %>
    <%= f.association :user, label_method: :first_name %>
    <%= f.association :projekt,label_method: :nazev, prompt: "Vyberte projekt" %>
    <%= f.input :stav, as: :radio_buttons, collection: [['Nový', 'Nový'], ['V řešení', 'V řešení'],['Čeká se na klienta','Čeká se na klienta'],['Vyřešeno','Vyřešeno'] ], label_method: :second, value_method: :first %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,  class:"btn btn-outline-info" %>
  </div>
<% end %>
