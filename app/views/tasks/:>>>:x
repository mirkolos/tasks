.card{style: "width: 18rem;"}
  .card-body
    %h5.card-title
      = task.predmet
    %p.card-text
      = task.popis
      = image_tag task.file
      /
        = link_to "aa", rails_blob_path(task.file, disposition: "attachment") 
    %strong Název projektu:
    - @projekts.each do |projekt|
      - if task.projekt_id == projekt.id
        %p.card-text
          = projekt.nazev
    %strong Uživatelé plnící úkol:
    - @users.each do |user|
      - if user.id == task.user_id
        %h5.card-text
          = user.first_name
          = user.last_name
    %p.card-text
      %h6 stav úkolu:
      = task.stav

